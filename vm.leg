void fatal(char *msg, ...)
{
    va_list ap;
    va_start(ap, msg);
    fprintf(stderr, "\n");
    vfprintf(stderr, msg, ap);
    fprintf(stderr, "\n");
    va_end(ap);
    exit(1);
}
void rprintf(char *msg, ...)
{
	va_list ap;
	va_start(ap, msg);
	printf("\x1b[31m");
	printf( msg, ap);
	printf("\x1b[0m");
	va_end(ap);
}

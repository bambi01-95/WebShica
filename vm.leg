void Block_append(oop b, oop s)
{
	gc_pushRoot((void*)&b);
	gc_pushRoot((void*)&s);
    oop *ss = get(b, Block,statements);
    int  sz = get(b, Block,size);
    ss = realloc(ss, sizeof(oop) * (sz + 1));
    ss[sz++] = s;
    get(b, Block,statements) = ss;
    get(b, Block,size) = sz;
	gc_popRoots(2);
}

